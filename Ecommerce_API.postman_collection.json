{
  "info": {
    "_postman_id": "e-commerce-api-collection",
    "name": "Ecommerce API",
    "description": "Collection for testing the Ecommerce Server API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "login"]
            },
            "description": "Authenticate user and get JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            },
            "description": "Retrieve all products"
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "1"]
            },
            "description": "Retrieve a specific product by ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Process Checkout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"product_id\": 1,\n      \"quantity\": 1\n    },\n    {\n      \"product_id\": 2,\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/checkout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "checkout"]
            },
            "description": "Process checkout for authenticated user with cart items"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "auth_token",
      "value": ""
    }
  ]
}
